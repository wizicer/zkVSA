---
export interface Props {
  number: string | number;
}

const { number } = Astro.props;
---

<span class="step-outer">
  <span class="step-inner">{number}</span>
</span>

<style>
  .step-outer {
    display: inline-block;
    position: relative;
    /* margin-right: 0.1em; */
  }

  .step-inner {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    border-radius: 50%;
    background-color: black;
    color: white;
    font-family: sans-serif;
    font-size: 10px;
    font-weight: normal;
    line-height: 1;
    border: 1px solid black;
  }
</style>
